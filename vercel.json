{
    "version": 2,
    "builds": [
        {
            "src": "public/index.php",
            "use": "vercel-php"
        },
        {
            "src": "public/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "public/index.php"
        }
    ],
    "build": {
        "env": {
            "APP_ENV": "production",
            "APP_KEY": "base64:/WmQZSB1ZnfA8zB8aArsbXxzkVMl1FT/tdDvq4rd+wg=",
            "DB_CONNECTION": "sqlite",
            "DB_DATABASE": "/database/database.sqlite",
            "LOG_CHANNEL": "stderr",
            "CACHE_DRIVER": "array",
            "SESSION_DRIVER": "cookie",
            "QUEUE_DRIVER": "sync"
        },
        "command": "composer install && npm install && npm run build && php artisan migrate:fresh --force && php artisan db:seed --force"
    }
}
