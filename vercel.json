{
    "version": 2,
    "builds": [
        {
            "src": "public/index.php",
            "use": "vercel-php"
        },
        {
            "src": "public/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/favicon.ico",
            "dest": "/public/favicon.ico"
        },
        {
            "src": "/(.*)",
            "dest": "public/index.php"
        }
    ],
    "env": {
        "APP_ENV": "production",
        "APP_KEY": "base64:/WmQZSB1ZnfA8zB8aArsbXxzkVMl1FT/tdDvq4rd+wg=",
        "DB_CONNECTION": "sqlite",
        "LOG_CHANNEL": "stderr",
        "CACHE_DRIVER": "array",
        "SESSION_DRIVER": "cookie",
        "QUEUE_DRIVER": "sync"
    },
    "scripts": {
        "vercel": [
            "php artisan config:clear",
            "php artisan config:cache",
            "php artisan view:clear",
            "php artisan route:clear",
            "php artisan route:cache",
            "php artisan optimize:clear",
            "composer install --no-dev --optimize-autoloader",
            "composer dump-autoload"
        ]
    },
    "buildCommand": "curl -sS https://getcomposer.org/installer | php && php composer.phar install && npm install && npm run build && php artisan migrate:fresh --force && php artisan db:seed --force"
}
